{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Bejelentett munkák</h1>
</div>


<body>

<table class="table table-hover">
    <thead>
        <tr>
            <th><h3>Azonosító</h3></th>
            <th><h3>User</h3></th>
            <th><h3>Dátum</h3></th>
            <th><h3>Típus</h3></th>
            <th><h3>Leírás</h3></th>
            <th><h3>Órabér</h3></th>
            <th><h3>Város</h3></th> 
            <th><h3>Státusz</h3></th>
        </tr>
    </thead>
    <tbody>
        {{#each munkak}}
        <tr>
            <div class="form-group">
            <td><h5>{{azonosito}}</h5></td>
            <td><h5>{{user}}</h5></td>
            <td><h5>{{date}}</h5></td>
            <td><h5>{{tipus}}</h5></td>
            <td><h5>{{leiras}}</h5></td>
            <td><h5>{{oraber}}</h5></td>
            <td><h5>{{varos}}</h5></td>
            <td><h4><span for="status" class="label label-{{statusClass}}">{{statusText}}</span></h4></td>
            <form method="post">
                <td><h5><button type="submit" class="btn btn-primary" >Szerkeszt</h5></td>
            </form>
            </div>
        </tr>
        {{/each}}
    </tbody>
</table>



<a href="../munkak_ado/felvesz" class="btn btn-default" role="button" active>Új munka felvétele</a>
<a href="../munkak_ado/szerkeszt" class="btn btn-default" role="button" active>Szerkesztés</a>
<a href="../munkak_ado/delete" class="btn btn-default" role="button" active>Törlés</a>
</div>
</body>




