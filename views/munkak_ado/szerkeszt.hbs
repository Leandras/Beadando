{{#each errorMessages}}
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Munka szerkesztése</h1>
</div>

{{#each munka}}

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.varos}}
                has-error
            {{/if}}
        ">
            <label for="varos" class="col-lg-2 control-label">Város</label>
            <div class="col-lg-10">
                <input class="form-control" id="varos" name="varos" placeholder="{{varos}}" type="text" value="{{data.varos}}">
                {{#if validationErrors.varos}}
                    <span class="help-block">{{validationErrors.varos.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <a href="/munkak/munkalista" class="btn btn-default" role="button">Visszalépés</a>
                <button type="submit" class="btn btn-primary">Küldés</button>
            </div>
        </div>
    </fieldset>
</form>  
{{/each}}