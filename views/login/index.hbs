{{#each errorMessages}}
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Bejelentkezés</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="btn-group btn-group-justified">
                <div class="col-md-2 col-md-offset-3">
                    <a href="/login/signupemp" class="btn btn-primary btn-lg btn-primary" role="button">Munka Vállaló Regisztráció</a>
                </div>
                <div class="col-md-3 col-md-offset-3">
                    <a href="/login/signup" class="btn btn-primary btn-lg btn-primary" role="button">Munka Adó Regisztráció</a>
                </div>
        </div>
        <div class="form-group">
            <label for="azon" class="col-lg-2 control-label">Felhasználó név</label> 
            <div class="col-lg-10">
                <input class="form-control" id="azon" name="azon" type="text" value="{{data.azon}}">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-2 control-label">Jelszó</label>
            <div class="col-lg-10">
                <input class="form-control" type="password" id="password" name="password" value="{{data.password}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" name="login" class="btn btn-default">Bejelentkezés</button>
                <button type="reset" class="btn btn-default">Törlés</button>
            </div>
        </div>
    </fieldset>
</form>
